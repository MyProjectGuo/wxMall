.imgs{
  width: 84%;
  margin: 0 auto;
  height: 180px;
  border-bottom: 1px solid #EEEEEE;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  
}
image{
  width: 100px;
  height: 100px;
  display: block;
  border-radius: 50%;
}
.testBox{
  padding: 10px 0;
  box-sizing: border-box;
  width: 84%;
  margin: 0 auto;
}
.testBox text:first-child{
  font-size: 18px;
  display: block;
  color: #616161;
  height: 80px;
  line-height: 80px;
}
.testBox text:last-child{
  font-size: 14px;
  display: block;
  color: #C1C1C1;
}
button{
  width: 84%;
  height: 50px;
  border-radius: 10px;
  background: #04BE01;
  color: #FFFFFF;
  text-align: center;
  margin-top: 20px;
}
.copyright{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  width: 84%;
  padding: 20px 0;
  font-size: 12px;
  display: block;
  color: #DA1414;
  text-align: center;
}