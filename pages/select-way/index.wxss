page{
  min-height: 100%;
  background-color: #F2f2f2;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
}
view{
  display: block;
}
.goods-list{
    width:100%;
    background-color: #fff;
    /* margin-bottom: 20rpx; */
    margin:0 30rpx;
}
.goods-list .list-title{
    font-size: 34rpx;
    color: #000;
    height: 100rpx;
    line-height: 100rpx;
    background: #eee;
    padding-left: 30rpx;
    /* padding: 30rpx 0 25rpx 30rpx; */
    /* border-bottom: 1rpx solid #eee; */
}
 .row-box{
    line-height: 34rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    /* padding: 24rpx 0 24rpx 30rpx; */
    margin: 0 30rpx; 
}
.border{
    border-top: 1rpx solid #eee;  
}
 .row-box .label{
    font-size: 28rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
     border-top: 1px solid #eee; 
    display: flex;
    justify-content: space-between; 
    align-items: center; 
 }

 .a-goods-conts{
    display: flex;
    justify-content:space-between;
    padding-right: 50rpx;
    width: 100rpx;
    box-sizing: border-box;
    transition: margin-left 0.2s ease-in-out;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto; 
    height: 50rpx
}
.a-goods-conts.active{
    background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
    background-size: 40rpx auto; 
}
.label:first-child{
  border: none;
}